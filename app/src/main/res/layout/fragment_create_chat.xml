<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pgizka.gsenger.createChatsView.CreateChatFragment">

    <EditText
        android:id="@+id/create_chat_chat_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="8dp"
        android:hint="Enter Chat name"
        />

    <TextView
        android:id="@+id/create_chat_info_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_chat_chat_name_edit_text"
        android:textAppearance="?android:textAppearanceMedium"
        android:text="Chose Contacts: "
        android:layout_margin="8dp"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/create_chat_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/create_chat_info_label"
        >

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
