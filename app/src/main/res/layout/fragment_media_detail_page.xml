<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.pgizka.gsenger.util.TouchImageView
        android:id="@+id/media_detail_page_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        />

    <ImageView
        android:id="@+id/media_detail_page_video_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/play_video_image"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/media_detail_page_info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Medium Text"
        android:textColor="#FFFFFF"
        android:layout_margin="4dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/media_detail_page_description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:textColor="#FFFFFF"
        android:maxLines="1"
        android:layout_above="@+id/media_detail_page_info_text"
        android:layout_alignLeft="@+id/media_detail_page_info_text"
        android:layout_alignStart="@+id/media_detail_page_info_text"/>


</RelativeLayout>