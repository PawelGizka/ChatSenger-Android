<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground"
    >

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/chat_item_main_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chat_item_chat_name_text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20sp"
        android:text="Joasia BiaÅ‚a"
        android:layout_alignTop="@+id/chat_item_main_image"
        android:layout_toRightOf="@+id/chat_item_main_image"
        android:layout_toEndOf="@+id/chat_item_main_image"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chat_item_description_text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="14sp"
        android:text="Medium Text"
        android:layout_below="@+id/chat_item_chat_name_text"
        android:layout_marginTop="4dp"
        android:layout_alignLeft="@+id/chat_item_chat_name_text"
        android:layout_alignStart="@+id/chat_item_chat_name_text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chat_item_date_text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="wczoraj"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>


</RelativeLayout>